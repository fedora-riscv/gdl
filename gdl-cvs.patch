+  // cumulative over all dims
+  template<typename T>
+  BaseGDL* product_cu_template( T* res, bool omitNaN)
+  {
+    SizeT nEl = res->N_Elements();
+    if( omitNaN)
+      {
+        for( SizeT i=0; i<nEl; ++i)
+          Nan2One( (*res)[i]);
+      }
+    for( SizeT i=1,ii=0; i<nEl; ++i,++ii)
+      (*res)[i] *= (*res)[ii];
+    return res;
+  }
